<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/title_back_beta"
    tools:context="com.example.android.tictactoe.MainActivity5x5">

    <TextView
        android:id="@+id/Splayer"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:text="@string/default_player_turn_text"
        android:textColor="#00ff00"
        android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Splayername"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Human"
                android:textAlignment="center"
                android:textColor="#00ff00"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/computer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Computer"
                android:textAlignment="center"
                android:textColor="#00ff00"
                android:textSize="22sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Splayerscore"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"

                android:text="0"
                android:textColor="#00ff00"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Computerscore"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="0"
                android:textColor="#00ff00"
                android:textSize="22sp" />

        </LinearLayout>

    <com.example.android.tictactoe.BoardView5x5
        android:background="#9f1919"
        android:id="@+id/board"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Reset board"
        android:textColor="#ffffff"
        android:background="#0c1594"
        android:textSize="20sp"
        android:textStyle="bold"
       android:onClick="resetboard5x5"/>

</LinearLayout>
